<Window x:Class="TPV_Sistema.Views.ErabiltzaileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPV_Sistema.Views"
        mc:Ignorable="d"
        Title="TPV - Elkartea" Height="600" Width="1000">
    <TabControl>

        <!-- 1. FITXA: TPV -->
        <TabItem Header="TPV">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <!-- Ticket-aren zatia -->
                    <ColumnDefinition Width="2*"/>
                    <!-- Produktuen zatia -->
                </Grid.ColumnDefinitions>

                <!-- EZKERREKO PANELA: TICKET ETA TOTALAK -->
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" ItemsSource="{Binding UnekoTicket}" IsReadOnly="True"
                              AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Produktua" Binding="{Binding Produktua.Izena}" Width="*"/>
                            <DataGridTextColumn Header="Kant." Binding="{Binding Kantitatea}" Width="Auto"/>
                            <DataGridTextColumn Header="Prezioa" Binding="{Binding PrezioaUnitateko, StringFormat={}{0:C}}" Width="*"/>
                            <DataGridTextColumn Header="Totala" Binding="{Binding LerroarenTotala, StringFormat={}{0:C}}" Width="*"/>
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="-" Background="IndianRed" Foreground="White"
                                                Command="{Binding DataContext.EzabatuLerroaAgindua, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock Text="{Binding Subtotala, StringFormat='Oinarria (BEZ gabe): {0:C}'}" FontSize="16" HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding BezZenbatekoa, StringFormat='BEZ-a (%21): {0:C}'}" FontSize="16" HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding Totala, StringFormat='TOTALA: {0:C}'}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,5,0,0"/>

                        <Button Grid.Row="1" Content="Saioa Itxi"
                                Command="{Binding IrtenAgindua}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                HorizontalAlignment="Right" Margin="10" Padding="10,5"
                                Background="CadetBlue"/>
                        <Button Content="SALMENTA GORDE" Command="{Binding GordeTicketAgindua}" Height="50" FontSize="18" FontWeight="Bold" Background="ForestGreen" Margin="0,10,0,0"/>
                        <Button Content="PRODUKTUAK GARBITU" Command="{Binding GarbituTicketAgindua}" Height="30" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- ESKUINEKO PANELA: PRODUKTUEN HAUTAKETA -->
				<Grid Grid.Column="1">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<!-- Zenbaki teklaturako -->
						<RowDefinition Height="*"/>
						<!-- Produktuen zerrendarako -->
					</Grid.RowDefinitions>

                    <!-- ZENBAKI-TEKLATUA (NUMPAD) - Bertsio Zuzendua -->
                    <Border Grid.Row="0" BorderBrush="Gainsboro" BorderThickness="1" CornerRadius="5" Padding="5" Margin="5,0,5,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <!-- Errenkada gehigarria 0-rako -->
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding KantitateaKatean}" FontSize="32" TextAlignment="Right" VerticalAlignment="Center" Margin="5"/>
                            <Button Grid.Column="2" Grid.Row="4" Grid.RowSpan="1" Content="C" Command="{Binding GarbituKantitateaAgindua}" Background="IndianRed" Height="Auto" Margin="2" FontSize="20" FontWeight="Bold"/>

                            <Button Grid.Column="0" Grid.Row="1" Content="7" Command="{Binding GehituDigitoaAgindua}" CommandParameter="7" Height="40" Margin="2"/>
                            <Button Grid.Column="1" Grid.Row="1" Content="8" Command="{Binding GehituDigitoaAgindua}" CommandParameter="8" Height="40" Margin="2"/>
                            <Button Grid.Column="2" Grid.Row="1" Content="9" Command="{Binding GehituDigitoaAgindua}" CommandParameter="9" Height="40" Margin="2"/>

                            <Button Grid.Column="0" Grid.Row="2" Content="4" Command="{Binding GehituDigitoaAgindua}" CommandParameter="4" Height="40" Margin="2"/>
                            <Button Grid.Column="1" Grid.Row="2" Content="5" Command="{Binding GehituDigitoaAgindua}" CommandParameter="5" Height="40" Margin="2"/>
                            <Button Grid.Column="2" Grid.Row="2" Content="6" Command="{Binding GehituDigitoaAgindua}" CommandParameter="6" Height="40" Margin="2"/>

                            <Button Grid.Column="0" Grid.Row="3" Content="1" Command="{Binding GehituDigitoaAgindua}" CommandParameter="1" Height="40" Margin="2"/>
                            <Button Grid.Column="1" Grid.Row="3" Content="2" Command="{Binding GehituDigitoaAgindua}" CommandParameter="2" Height="40" Margin="2"/>
                            <Button Grid.Column="2" Grid.Row="3" Content="3" Command="{Binding GehituDigitoaAgindua}" CommandParameter="3" Height="40" Margin="2"/>

                            <!-- 0 botoia behealdean eta zutabe bat baino gehiago hartuz -->
                            <Button Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Content="0" Command="{Binding GehituDigitoaAgindua}" CommandParameter="0" Height="40" Margin="2"/>
                        </Grid>
                    </Border>

                    <!-- Produktuen zerrenda orain Grid-aren bigarren errenkadan dago -->
					<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
						<ItemsControl ItemsSource="{Binding ProduktuGuztiak}">
							<ItemsControl.ItemsPanel>
								<ItemsPanelTemplate>
									<WrapPanel/>
								</ItemsPanelTemplate>
							</ItemsControl.ItemsPanel>
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<Button Content="{Binding Izena}"
											Command="{Binding DataContext.GehituProduktuTicketeraAgindua, RelativeSource={RelativeSource AncestorType=Window}}"
											CommandParameter="{Binding}"
											Width="120" Height="80" Margin="5"/>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>
					</ScrollViewer>
				</Grid>
            </Grid>
        </TabItem>

        <!-- 2. FITXA: MAHAIEN ERRESERBA -->
        <TabItem Header="Mahaien Erreserba">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- GOIKO PANELA: ERRESERBA BERRIA EGIN -->
                <Border BorderBrush="Gainsboro" BorderThickness="1" Padding="10" CornerRadius="5">
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <StackPanel Margin="0,0,20,0">
                            <Label Content="Eguna:" FontWeight="SemiBold"/>
                            <DatePicker SelectedDate="{Binding HautatutakoData}" Width="150"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,20,0">
                            <Label Content="Mahaia:" FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding Mahaiak}" DisplayMemberPath="MahaiIzena"
                                      SelectedItem="{Binding HautatutakoMahaia}" Width="150"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,20,0">
                            <Label Content="Otordua:" FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding Otorduak}" 
                                      SelectedItem="{Binding HautatutakoOtordua}" Width="120"/>
                        </StackPanel>
                        <Button Content="Erreserba Egin" Command="{Binding EginErreserbaAgindua}" 
                                VerticalAlignment="Bottom" Height="30" Padding="10,0" Background="CornflowerBlue" Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- BEHEKO PANELA: NIRE ERRESERBAK -->
                <Grid Grid.Row="1" Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="NIRE DATOZEN ERRESERBAK" FontSize="16" FontWeight="Bold"/>
                    <DataGrid Grid.Row="1" Margin="0,10" ItemsSource="{Binding NireErreserbak}" 
                              SelectedItem="{Binding HautatutakoErreserba}"
                              IsReadOnly="True" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat='yyyy-MM-dd'}" Width="*"/>
                            <DataGridTextColumn Header="Mahaia" Binding="{Binding Mahaia.MahaiIzena}" Width="*"/>
                            <DataGridTextColumn Header="Otordua" Binding="{Binding Otordua}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Grid.Row="2" Content="Hautatutako Erreserba Ezabatu" 
                            Command="{Binding EzabatuErreserbaAgindua}" HorizontalAlignment="Left" Background="IndianRed" Foreground="White"/>
                </Grid>
            </Grid>
        </TabItem>

    </TabControl>
</Window>
