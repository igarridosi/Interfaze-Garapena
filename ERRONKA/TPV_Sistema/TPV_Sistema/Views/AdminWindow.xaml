<Window x:Class="TPV_Sistema.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPV_Sistema.Views"
        mc:Ignorable="d"
        Title="Administrazio Panela" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Erabiltzaileen Kudeaketa">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Erabiltzaileen zerrenda -->
                <DataGrid Grid.Column="0" Margin="0,0,10,0"
                          ItemsSource="{Binding Erabiltzaileak}"
                          SelectedItem="{Binding HautatutakoErabiltzailea}"
                          IsReadOnly="True" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                        <DataGridTextColumn Header="Erabiltzaile Izena" Binding="{Binding ErabiltzaileIzena}" Width="*"/>
                        <DataGridTextColumn Header="Rola" Binding="{Binding Rola}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Datuak sartzeko formularioa -->
                <StackPanel Grid.Column="1">
                    <Label Content="Erabiltzaile Izena:"/>
                    <TextBox Text="{Binding ErabiltzaileIzena, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <Label Content="Pasahitza:"/>
                    <TextBox Text="{Binding Pasahitza, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <Label Content="Rola (admin/erabiltzailea):"/>
                    <TextBox Text="{Binding Rola, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20"/>

                    <!-- Botoiak -->
                    <Button Content="Gehitu Berria" Command="{Binding GehituAgindua}" Margin="0,5"/>
                    <Button Content="Aldatu" Command="{Binding AldatuAgindua}" Margin="0,5"/>
                    <Button Content="Ezabatu" Command="{Binding EzabatuAgindua}" Background="IndianRed" Margin="0,5"/>
                    <Button Content="Garbitu" Command="{Binding GarbituAgindua}" Margin="0,20,0,0"/>
                    
                    <Button Grid.Row="1" Content="Saioa Itxi" 
                            Command="{Binding IrtenAgindua}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" 
                            HorizontalAlignment="Right" Margin="10" Padding="10,5"
                            Background="CadetBlue"/>
                </StackPanel>
            </Grid>
        </TabItem>

        <TabItem Header="Produktuen Kudeaketa">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Produktuen zerrenda -->
                <DataGrid Grid.Column="0" Margin="0,0,10,0"
                          ItemsSource="{Binding Produktuak}"
                          SelectedItem="{Binding HautatutakoProduktua}"
                          IsReadOnly="True" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                        <DataGridTextColumn Header="Produktu Izena" Binding="{Binding Izena}" Width="*"/>
                        <DataGridTextColumn Header="Prezioa" Binding="{Binding Prezioa, StringFormat={}{0:C}}" Width="*"/>
                        <DataGridTextColumn Header="Stocka" Binding="{Binding Stocka}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Datuak sartzeko formularioa -->
                <StackPanel Grid.Column="1">
                    <Label Content="Produktuaren Izena:"/>
                    <TextBox Text="{Binding ProduktuIzena, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <Label Content="Prezioa:"/>
                    <TextBox Text="{Binding PrezioaString, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <Label Content="Stock Kantitatea:"/>
                    <TextBox Text="{Binding StockaString, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20"/>

                    <!-- Botoiak -->
                    <Button Content="Gehitu Berria" Command="{Binding GehituProduktuAgindua}" Margin="0,5"/>
                    <Button Content="Aldatu" Command="{Binding AldatuProduktuAgindua}" Margin="0,5"/>
                    <Button Content="Ezabatu" Command="{Binding EzabatuProduktuAgindua}" Background="IndianRed" Margin="0,5"/>
                    <Button Content="Garbitu" Command="{Binding GarbituProduktuAgindua}" Margin="0,20,0,0"/>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="Mahaien Kudeaketa">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*"/>
                    <ColumnDefinition Width="451*"/>
                    <ColumnDefinition Width="258*"/>
                </Grid.ColumnDefinitions>

                <DataGrid Grid.Column="0" Margin="0,0,10,0"
                          ItemsSource="{Binding Mahaiak}"
                          SelectedItem="{Binding HautatutakoMahaia}"
                          IsReadOnly="True" AutoGenerateColumns="False" Grid.ColumnSpan="2">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                        <DataGridTextColumn Header="Mahai Izena" Binding="{Binding MahaiIzena}" Width="*"/>
                        <DataGridTextColumn Header="Edukiera" Binding="{Binding Edukiera}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Column="2">
                    <Label Content="Mahai Izena:"/>
                    <TextBox Text="{Binding MahaiIzena, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <Label Content="Edukiera (pertsonak):"/>
                    <TextBox Text="{Binding EdukieraString, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20"/>

                    <Button Content="Gehitu Berria" Command="{Binding GehituMahaiAgindua}" Margin="0,5"/>
                    <Button Content="Hautatutakoa Aldatu" Command="{Binding AldatuMahaiAgindua}" Margin="0,5"/>
                    <Button Content="Hautatutakoa Ezabatu" Command="{Binding EzabatuMahaiAgindua}" Background="IndianRed" Margin="0,5"/>
                    <Button Content="Garbitu" Command="{Binding GarbituMahaiAgindua}" Margin="0,20,0,0"/>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="Salmenten Erregistroa">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- EZKERREKO PANELA: ESKAERA GUZTIAK -->
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Egindako Salmenta Guztiak" FontSize="16" FontWeight="Bold"/>
                    <DataGrid Grid.Row="1" Margin="0,10,0,0"
                              ItemsSource="{Binding Eskaerak}"
                              SelectedItem="{Binding HautatutakoEskaera}"
                              IsReadOnly="True" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat='yyyy-MM-dd HH:mm'}" Width="*"/>
                            <DataGridTextColumn Header="Erabiltzailea" Binding="{Binding Erabiltzailea.ErabiltzaileIzena}" Width="*"/>
                            <DataGridTextColumn Header="Totala" Binding="{Binding Guztira, StringFormat={}{0:C}}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- ESKUINEKO PANELA: HAUTATUTAKO ESKAERAREN XEETASUNAK -->
                <Grid Grid.Column="1" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Salmentaren Xehetasunak" FontSize="16" FontWeight="Bold"/>
                    <DataGrid Grid.Row="1" Margin="0,10,0,0"
                              ItemsSource="{Binding HautatutakoEskaerarenLerroak}"
                              IsReadOnly="True" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Produktua" Binding="{Binding Produktua.Izena}" Width="*"/>
                            <DataGridTextColumn Header="Kant." Binding="{Binding Kantitatea}" Width="Auto"/>
                            <DataGridTextColumn Header="Prezioa" Binding="{Binding PrezioaUnitateko, StringFormat={}{0:C}}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
