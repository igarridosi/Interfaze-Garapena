<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="Pulsar la tecla intro" Height="200" Width="300">
    <Grid>
        <TextBlock Text="Escribe un texto" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="16"/>
        <TextBox Name="TextBox1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" Width="200" KeyDown="TextBox_KeyDown"/>
        <TextBox Name="TextBox2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" Width="200" KeyDown="TextBox_KeyDown"/>
        <TextBox Name="TextBox3" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" Width="200" KeyDown="TextBox_KeyDown"/>
        <Button Content="Limpiar" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,0,0,10" Width="80" Click="ClearButton_Click"/>
        <Button Content="Salir" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,10" Width="80" Click="ExitButton_Click"/>
    </Grid>
</Window>
