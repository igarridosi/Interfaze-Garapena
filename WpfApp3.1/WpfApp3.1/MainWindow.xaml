<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cálculo de una serie de números" Height="200" Width="300">
    <Grid>
        <Label Name="LblNumero" Content="Numero 1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="TxtNumero" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Width="260"/>
        <Button Content="Siguiente" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0" Width="100" Click="BtnSiguiente_Click"/>
        <Button Content="Salir" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,80,0,0" Width="100" Click="BtnSalir_Click"/>
    </Grid>
</Window>
