<Window x:Class="Ariketa9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista de Amigos" Height="400" Width="400">
    <Grid>
        <!-- ListBox for displaying friends -->
        <ListBox x:Name="FriendsListBox" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="150" Margin="10,34,0,0" SelectionChanged="FriendsListBox_SelectionChanged"/>

        <!-- TextBox for selected friend -->
        <TextBox x:Name="SelectedFriendTextBox" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="150" Margin="10,255,0,0" IsReadOnly="True"/>

        <!-- TextBox for new friend -->
        <TextBox x:Name="NewFriendTextBox" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="150" Margin="10,313,0,0" RenderTransformOrigin="0.511,1.079"/>

        <!-- Buttons -->
        <Button Content="Añadir" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="183,34,0,0" Click="AddFriendButton_Click"/>
        <Button Content="Eliminar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="183,74,0,0" Click="RemoveFriendButton_Click"/>
        <Button Content="Borrar Lista" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="183,114,0,0" Click="ClearListButton_Click"/>
        <Button Content="Salir" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="183,154,0,0" Click="ExitButton_Click"/>

        <!-- Labels -->
        <Label Content="Mis Amigos" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,4,0,0"/>
        <Label Content="Amigo Seleccionado" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,229,0,0"/>
        <Label Content="Amigo Nuevo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,287,0,0"/>
    </Grid>
</Window>
