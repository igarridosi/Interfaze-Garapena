<Window x:Class="Ariketa8.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputBox" Height="150" Width="400">
    <Grid>
        <Label x:Name="lblPrompt" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="360"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="360"/>
        <Button Content="Aceptar" HorizontalAlignment="Left" Margin="220,80,0,0" VerticalAlignment="Top" Width="70" Click="btnAccept_Click"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="300,80,0,0" VerticalAlignment="Top" Width="70" Click="btnCancel_Click"/>
    </Grid>
</Window>