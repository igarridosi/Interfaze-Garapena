<Window x:Class="ARIKETA12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARIKETA12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="150"/>
            <ColumnDefinition Width="*" MinWidth="180"/>
            <ColumnDefinition Width="*" MinWidth="150"/>

        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <GroupBox Header="Dietas" Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">
            <StackPanel Margin="5,10,5,5">
                <CheckBox x:Name="chkDesayuno" Content="Desayuno" Margin="0,0,0,5" Checked="dietasClick" Unchecked="dietasClick"/>
                <CheckBox x:Name="chkComida" Content="Comida" Margin="0,0,0,5" Checked="dietasClick" Unchecked="dietasClick"/>
                <CheckBox x:Name="chkCena" Content="Cena" Margin="0,0,0,5" Checked="dietasClick" Unchecked="dietasClick"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Viajes" Grid.Column="1" Grid.Row="0" Margin="10,0,10,0">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="KM" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox x:Name="txtKM" TextChanged="textBoxChanged" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" Width="100" HorizontalAlignment="Left"/>

                <TextBlock Text="Horas" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,0"/>
                <TextBox x:Name="txtHorasViaje" TextChanged="textBoxChanged" Grid.Row="1" Grid.Column="1" Margin="0,5,0,0" Width="100" HorizontalAlignment="Left"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Trabajo" Grid.Column="2" Grid.Row="0" Margin="10,0,0,0">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Horas" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="txtHorasTrabajo" TextChanged="textBoxChanged" Grid.Column="1" Width="100" HorizontalAlignment="Left" Margin="0,25,0,18"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Margin="0,10,0,10">
            <Separator Margin="0,0,0,10" Foreground="Black" Height="1"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>

                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>

                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtResultado1" Grid.Column="0" IsReadOnly="True" Height="25"/>
                <TextBox x:Name="txtResultado2" Grid.Column="2" IsReadOnly="True" Height="25"/>
                <TextBox x:Name="txtResultado3" Grid.Column="4" IsReadOnly="True" Height="25"/>
            </Grid>

            <Separator Margin="0,10,0,0" Foreground="Black" Height="1"/>
        </StackPanel>

        <Grid Grid.Row="4" Grid.ColumnSpan="3" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left" Margin="0,0,0,0">
                <Button x:Name="btnLimpiar" Content="Limpiar" Width="80" Height="25" Margin="0,0,10,0" Click="limpiarClick"/>
                <Button x:Name="btnSalir" Content="Salir" Width="80" Height="25" Click="btnSalir_Click"/>
            </StackPanel>

            <TextBlock Text="TOTAL" Grid.Column="1" 
                       FontSize="16" FontWeight="Bold" 
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="0,0,15,0"/>

            <TextBox x:Name="txtTotal" Grid.Column="2" 
                     IsReadOnly="True" 
                     Height="28" 
                     Background="#C6D3E4" 
                     FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>
