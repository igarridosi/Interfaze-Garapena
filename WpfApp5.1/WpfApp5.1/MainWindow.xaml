<Window x:Class="WpfApp5._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5._1"
        mc:Ignorable="d"
        Title="Estilos y tipos de letra" Height="450" Width="800">
    <Grid>
        <TextBlock Name="TextDisplay" Text="TEXTO DE PRUEBA" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0">
            <Button Content="Comic Sans" Width="100" Margin="5" Click="ChangeFontComicSans"/>
            <Button Content="Negrita" Width="100" Margin="5" Click="ChangeFontBold"/>
            <Button Content="Tachado" Width="100" Margin="5" Click="ChangeFontStrikethrough"/>
            <Button Content="+Tamaño" Width="100" Margin="5" Click="IncreaseFontSize"/>
            <Button Content="-Tamaño" Width="100" Margin="5" Click="DecreaseFontSize"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,120,0,0">
            <Button Content="Courier" Width="100" Margin="5" Click="ChangeFontCourier"/>
            <Button Content="Cursiva" Width="100" Margin="5" Click="ChangeFontItalic"/>
            <Button Content="Subrayado" Width="100" Margin="5" Click="ChangeFontUnderline"/>
        </StackPanel>

        <TextBox Name="InputTextBox" Width="300" Height="100" Margin="0,200,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap"/>

        <Button Content="Seleccionar" Width="100" Margin="0,320,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Click="SelectText"/>

        <TextBlock Name="TextInfo" Text="El texto tiene 0 caracteres, y el texto seleccionado es: " HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>

    </Grid>
</Window>
