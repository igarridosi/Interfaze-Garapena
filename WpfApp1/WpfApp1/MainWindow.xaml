<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cálculo de fórmula matemática" Height="350" Width="400">
    <Grid Margin="10,24,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="81*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Primer Número" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12,10,0,0" Foreground="White" Background="DarkRed" Height="26" Width="92"/>
        <TextBox Name="txtNumero1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,10,0,0" Width="200" PreviewTextInput="TextBox_PreviewTextInput" TextChanged="txtNumero1_TextChanged_1" Height="18" Grid.Column="1"/>

        <Label Content="Segundo Número" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,50,0,0" Foreground="White" Background="DarkRed" Height="26" Width="104"/>
        <TextBox Name="txtNumero2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,50,0,0" Width="200" PreviewTextInput="TextBox_PreviewTextInput" Height="18" Grid.Column="1"/>

        <Label Content="Tercer Número" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="14,90,0,0" Foreground="White" Background="DarkRed" Height="26" Width="88"/>
        <TextBox Name="txtNumero3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,90,0,0" Width="200" PreviewTextInput="TextBox_PreviewTextInput" Height="18" Grid.Column="1"/>

        <Label Content="Cuarto Número" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12,130,0,0" Foreground="White" Background="DarkRed" Height="26" Width="92"/>
        <TextBox Name="txtNumero4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,130,0,0" Width="200" PreviewTextInput="TextBox_PreviewTextInput" Height="18" Grid.Column="1"/>

        <Label Content="RESULTADO" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="18,170,0,0" Foreground="White" Background="DarkBlue" Height="26" Width="80"/>
        <TextBox Name="txtResultado" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,170,0,0" Width="200" IsReadOnly="True" Height="18" Grid.Column="1"/>

        <Button Content="Operar" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="18,210,0,0" Width="80" Click="btnOperar" Height="20"/>
        <Button Content="Limpiar" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,210,0,0" Width="80" Click="btnLimpiar" Height="20" Grid.Column="1"/>
        <Button Content="Salir" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="92,210,0,0" Width="80" Click="btnSalir" Height="20" Grid.Column="1"/>
        <Canvas Margin="0,0,6,0" Grid.Column="1"/>
    </Grid>
</Window>
