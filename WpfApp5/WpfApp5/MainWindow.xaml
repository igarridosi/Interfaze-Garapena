<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Texto de Prueba" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,42,0,0" FontSize="24"/>

        <RichTextBox Margin="180,233,356,96" Name="rtbTextoPrincipal">
            <FlowDocument>
                <Paragraph >
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,107,0,274">
            <Button Content="Comic Sans" Width="100" Margin="5" Name="btnComicSans"/>
            <Button Content="Negrita" Width="100" Margin="5" Name="btnNegrita"/>
            <Button Content="Tachado" Width="100" Margin="5" Name="btnTachado"/>
            <Button Content="+Tamaño" Width="100" Margin="5" Name="btnAumentarTamano"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,160,0,223" Width="440">
            <Button Content="Courier" Width="100" Margin="5" Name="btnCourier"/>
            <Button Content="Cursiva" Width="100" Margin="5" Name="btnCursiva"/>
            <Button Content="Subrayado" Width="100" Margin="5" Name="btnSubrayado"/>
            <Button Content="-Tamaño" Width="100" Margin="5" Name="btnReducirTamano"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,233,174,0" Width="168" Height="104">
            <Button Content="Seleccionar" Width="115" Margin="5" Name="btnSeleccionar" Height="35"/>
            <Button Content="Salir" Width="113" Margin="5" Name="btnSalir" Height="28"/>
        </StackPanel>

        <TextBlock HorizontalAlignment="Left" Margin="180,363,0,0" Name="tblkInfo" TextWrapping="Wrap" Text="El texto tiene 0 caracteres, y el texto seleccionado es: " VerticalAlignment="Top" Width="400"/>
    </Grid>
</Window>
