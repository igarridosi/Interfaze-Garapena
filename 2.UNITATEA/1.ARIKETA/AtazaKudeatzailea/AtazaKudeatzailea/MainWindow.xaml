<Window x:Class="AtazaKudeatzailea.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtazaKudeatzailea"
        xmlns:viewmodels="clr-namespace:AtazaKudeatzailea.ViewModels"
        mc:Ignorable="d"
        Title="Ataza-kudeatzailea" Height="450" Width="800">

    <!-- ViewModel-a View-arekin lotzen dugu -->
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <DockPanel Margin="10">
        <!-- Beheko botoiak -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Berria" Width="80" Margin="5" Command="{Binding GehituAtazaCmd}"/>
            <Button Content="Editatu" Width="80" Margin="5" Command="{Binding EditatuAtazaCmd}"/>
            <Button Content="Ezabatu" Width="80" Margin="5" Command="{Binding EzabatuAtazaCmd}"/>
            <Button Content="Irten" Width="80" Margin="5" Command="{Binding IrtenCmd}"/>
        </StackPanel>

        <!-- Atazen zerrenda -->
        <DataGrid ItemsSource="{Binding Atazak}"
                  SelectedItem="{Binding HautatutakoAtaza}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titulua" Binding="{Binding Titulua}" Width="*"/>
                <DataGridTextColumn Header="Lehentasuna" Binding="{Binding Lehentasuna}" Width="1.2*"/>
                <DataGridTextColumn Header="Azken eguna" Binding="{Binding AzkenEguna, StringFormat='yyyy-MM-dd'}" Width="1.2*"/>
                <DataGridTemplateColumn Header="Egina" Width="0.8*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <!-- CheckBox-a zentratzeko -->
                            <CheckBox IsChecked="{Binding Egina, UpdateSourceTrigger=PropertyChanged}" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</Window>
