<Window x:Class="LekuErreserbaSistema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LekuErreserbaSistema"
        mc:Ignorable="d"
        Title="Leku Erreserba Sistema" Height="500" Width="800"
        Closing="Window_Closing">
    <Grid>
        <StackPanel x:Name="MenuPanela" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Aukeratu garraio mota:" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Button Content="Autobusa" Width="150" Margin="10" Padding="10" Click="AutobusaAukeratu_Click" />
            <Button Content="Trena" Width="150" Margin="10" Padding="10" Click="TrenaAukeratu_Click" />
            <Button Content="Hegazkina" Width="150" Margin="10" Padding="10" Click="HegazkinaAukeratu_Click" />
        </StackPanel>

        <Grid x:Name="PlanoPanela" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ContentControl x:Name="GarraioIkuspegia" Grid.Row="0" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Baieztatu Erreserba" Margin="10" Padding="10,5" Click="BaieztatuKlikEginda" />
                <Button Content="Atzera" Margin="10" Padding="10,5" Click="AtzeraBotoia_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>