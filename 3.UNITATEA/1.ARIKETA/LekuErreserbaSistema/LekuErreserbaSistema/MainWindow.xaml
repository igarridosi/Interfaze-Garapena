<Window x:Class="LekuErreserbaSistema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LekuErreserbaSistema"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Closing="Window_Closing">
    <!-- (Closing="Window_Closing") Ixterakoan datuak gordetzeko JSON-ean erabiltzen da -->
    <Window.Resources>
        <!-- Hemen gure converter-a deklaratzen dugu, gero erabili ahal izateko -->
        <local:EgoeraToColorConverter x:Key="EgoeraConverter" />
    </Window.Resources>
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ItemsControl x:Name="EserlekuenPlanoa" Grid.Row="0" ItemsSource="{Binding Eserlekuak}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Id}" 
                        Width="40" Height="40" Margin="5"
                        Click="EserlekuanKlikEginDa"
                        Background="{Binding Egoera, Converter={StaticResource EgoeraConverter}}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

        </ItemsControl>
        <Button Grid.Row="1" 
            Content="Baieztatu Erreserba" 
            Margin="10" Padding="10,5" 
            HorizontalAlignment="Center"
            Click="BaieztatuKlikEginda" />
    </Grid>
</Window>
